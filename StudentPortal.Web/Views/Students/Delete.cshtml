@model StudentPortal.Web.Models.Entities.Student

<h1>Delete Student</h1>

    <p class="text-danger fw-bold" >Are you sure want to delete this student?</p>
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" readonly />
        </div>
        <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subscribe" asp-for="Subscribed" disabled />
            <label class="form-check-label" for="Subscribe">Subscribed</label>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="List" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
