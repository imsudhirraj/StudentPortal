@{
}
@model List<StudentPortal.Web.Models.Entities.Student>

<h1>Students List</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <form method="get" asp-controller="Students" asp-action="Search">
            <th>
                <input type="search" class="form-control" name="searchTerm" placeholder="Search Student with their name" aria-label="Search" />
            </th>
            <th>
                <input class="btn btn-secondary" type="submit" value="Search"></input>
            </th>
            </form>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
