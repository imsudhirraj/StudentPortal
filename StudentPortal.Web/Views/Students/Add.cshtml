@{
}
@model StudentPortal.Web.Models.AddStudentViewModel


<h1>Add Student</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" />
    </div>
    <div class="mt-3">
        <label class="form-label">Admission</label>
        <input type="date" class="form-control" asp-for="Admission" />
    </div>
    <div class="mt-3">
        <label class="form-label">Gender</label>
        <input type="text" class="form-control" asp-for="Gender" />
    </div>
    <div class="mt-3">
        <label class="form-label">Fees</label>
        <input type="text" class="form-control" asp-for="Fees" />
    </div>
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subscribe" asp-for="Subscribed" />
        <label class="form-check-label" for="Subscribe">Subscribed</label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>